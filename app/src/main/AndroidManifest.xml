<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.flyco.tablayoutsamples"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序访问有关的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--监视网络状态的变化-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 对SD卡进行写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 对SD卡进行读权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.SimpleHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CommonTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SlidingTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SegmentTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SlidingDblTabActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.daimajia.demo.SliderActivity"/>
    </application>

</manifest>
